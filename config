[include]
    path = config-user-local
[merge]
    summary = true
    tool = kdiff3
[alias]
    lg = log --color --graph --pretty=myshort --patience
    ls = log --color --pretty=myshort --patience
    ll = log --color --pretty=mylong --patience --shortstat
    lc = log --color --pretty=mylong --patience --stat
    ld = log --color --pretty=mylong --patience --patch --word-diff
    pa = !"if branch=$(git symbolic-ref --short -q HEAD); then for b in $(git for-each-ref refs/heads --format='%(refname)') ; do git checkout ${b#refs/heads/} ; git pull --ff-only; done; git checkout $branch; else echo Error: command forbidden when using a detached head; fi"
    co = checkout
    ci = commit
    st = status --short
    df = difftool --dir-diff
[push]
	default = simple
[core]
    autocrlf = false
    ; autocrlf = input
    ; safecrlf = true
[gui]
    encoding = utf-8
    fontui = -family Calibri -size 10 -weight normal -slant roman -underline 0 -overstrike 0
    fontdiff = -family Consolas -size 10 -weight normal -slant roman -underline 0 -overstrike 0
    warndetachedcommit = true
[pretty]
    myshort = tformat:%Cred%h%Creset%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset
    mylong = tformat:%n%n%Cred%H%Creset%C(yellow)%d%C(bold white) %s%n%Creset   Author: %Cgreen(%ai) %C(bold blue)%an <%ae>%Creset%nCommitter: %Cgreen(%ci) %C(bold blue)%an <%ae>%Creset%n  Parents: %C(cyan)%P%Creset%n%-N%w(0,4,4)%n%n%-b

